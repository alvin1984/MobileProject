<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/base_lib_view_dialog_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/base_lib_fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@drawable/base_library_dialog_base_shape" />

    <FrameLayout
        android:id="@+id/base_lib_fl_btn_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_library_dialog_base_bottom_shape"/>


    <ImageView
        android:id="@+id/base_lib_iv_close"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/base_library_dialog_close_btn_cricle_bg"
        android:src="@mipmap/base_library_icon_dialog_close"
        android:visibility="gone"/>


</LinearLayout>

